{
  "name": "@lembdev/nestjs-protobuf-compiler",
  "description": "Generate TypeScript interfaces and converters for Nest.js from Protobuf files",
  "keywords": [
    "nestjs",
    "grpc",
    "proto",
    "protobuf",
    "convertor",
    "generator",
    "typescript"
  ],
  "homepage": "https://github.com/lembdev/nestjs-protobuf-compiler",
  "author": "Alexander Vyzhanov <lembdev@gmail.com>",
  "license": "MIT",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "npc": "bin/nestjs-protobuf-compiler.js",
    "nestjs-protobuf-compiler": "bin/nestjs-protobuf-compiler.js"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lembdev/nestjs-protobuf-compiler.git"
  },
  "bugs": {
    "url": "https://github.com/lembdev/nestjs-protobuf-compiler/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf ./dist",
    "build": "swc ./src -d dist --copy-files --source-maps=false",
    "build:dev": "npm run build -- --source-maps=true",
    "build:watch": "npm run build:dev -- --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "npc": "node ./bin/nestjs-protobuf-compiler.js",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "glob-promise": "^5.0.0",
    "handlebars": "^4.7.7",
    "protobufjs": "^7.1.2",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.14",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.4",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "typescript": "^4.8.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.ts": "eslint --fix"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
