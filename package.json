{
  "name": "@lembdev/nestjs-protobuf-compiler",
  "description": "Generate TypeScript interfaces and converters for Nest.js from Protobuf files",
  "keywords": [
    "nestjs",
    "grpc",
    "proto",
    "protobuf",
    "convertor",
    "generator",
    "typescript"
  ],
  "homepage": "https://github.com/lembdev/nestjs-protobuf-compiler",
  "author": "Alexander Vyzhanov <lembdev@gmail.com>",
  "license": "MIT",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "npc": "bin/nestjs-protobuf-compiler.js",
    "nestjs-protobuf-compiler": "bin/nestjs-protobuf-compiler.js"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lembdev/nestjs-protobuf-compiler.git"
  },
  "bugs": {
    "url": "https://github.com/lembdev/nestjs-protobuf-compiler/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf ./dist",
    "build": "swc ./src -d dist --copy-files --source-maps=false",
    "build:dev": "npm run build -- --source-maps=true",
    "build:watch": "npm run build:dev -- --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "npc": "node ./bin/nestjs-protobuf-compiler.js",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "glob-promise": "^6.0.3",
    "handlebars": "^4.7.7",
    "protobufjs": "^7.2.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.65",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chokidar": "^3.5.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.5",
    "typescript": "^5.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.ts": "eslint --fix"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
